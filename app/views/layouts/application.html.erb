<!DOCTYPE html>
<html>
  <head>
    <title>Anotherpin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1><%= link_to "Another Pin Co", root_path %></h1>

      <nav>
        <%= link_to 'Shop', products_path %>
        <%= link_to 'Info', info_path %>
        <%= link_to '#' do %>
          Cart #<%= @current_cart.id %> (0)
        <% end %>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      Copyright 2018
    </footer>
  </body>
</html>
